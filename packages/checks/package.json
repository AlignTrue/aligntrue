{
  "name": "@aligntrue/checks",
  "version": "0.1.0-alpha.2",
  "description": "Check runner engine for AlignTrue Align packs",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "schema"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "run-checks": "tsx scripts/run-checks.ts"
  },
  "dependencies": {
    "@aligntrue/core": "workspace:*",
    "@aligntrue/schema": "workspace:*",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "minimatch": "^10.1.1",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
