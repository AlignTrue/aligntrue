{
  "name": "aligntrue",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "verify": "pnpm --filter @aligntrue/testkit test",
    "testkit:verify": "pnpm verify",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist archive/*/node_modules archive/*/.next archive/*/dist",
    "clean-temp": "find . -type f -name 'temp-*' -not -path '*/node_modules/*' -delete"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
